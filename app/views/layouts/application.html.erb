<!DOCTYPE html>
<html>
<head>
  <title>Depot</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body id="store" >                                        <!-- řádek 10 -->
  <div id="banner" >
    <%= image_tag("logo.png") %>
    <%= @page_title || "Pragmatická knihovna" %>
  </div>
  <div id="columns" >                                     <!-- řádek 15 -->
    <div id="side" >
      <div id="cart">
        <%= render(@cart) if @cart %>
      </div>
      <a href="http://www...." >Úvod</a><br />
      <a href="http://www..../faq" >Otázky</a><br />
      <a href="http://www..../news" >Novinky</a><br />
      <a href="http://www..../contact" >Kontakt</a><br /> <!-- řádek 20 -->

      <% if session[:user_id] %>
      <br />
      <%= link_to 'Objednavky', orders_path %><br />
      <%= link_to 'Produkty', products_path %><br />
      <%= link_to 'Uzivatelia', users_path %><br />
      <br />
      <%= button_to 'Odhlasenie', logout_path, :method => :delete %>
      <% end %>
    </div>
    <div id="main" >
      <%= yield %>
    </div>
  </div>                                                  <!-- řádek 25 -->
</body>
</html>
