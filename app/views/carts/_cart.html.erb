<div class="cart_tilte">Nakupny kosik</div>
<table>
	<%= render(cart.line_items) %>

	<tr class="total_line">
		<td colspan="2">Celkom</td>
		<td class="total_cell">
			<%= number_to_currency(cart.total_price, :locale => :cs) %>
		</td>
	</tr>
</table>

<%= button_to 'Objednat', new_order_path, :method => :get %>

<%= button_to 'Vyprazdnit Kosik', cart, :method => :delete, :confirm => 'Naozaj vyprazdnit?' %>